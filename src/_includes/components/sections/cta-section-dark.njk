<style>
  .cta-section-dark {
    padding: 80px 0;
    background: var(--primary-dark);
    position: relative;
    overflow: hidden;
  }
  
  .cta-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(0, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(0, 212, 255, 0.1) 0%, transparent 50%);
    opacity: 0.5;
  }
  
  .cta-content {
    background: rgba(0, 255, 255, 0.03);
    backdrop-filter: blur(30px) saturate(200%);
    border: 2px solid rgba(0, 255, 255, 0.3);
    border-radius: 20px;
    padding: 3rem;
    text-align: center;
    position: relative;
    z-index: 1;
    box-shadow: 
      0 20px 60px rgba(0, 0, 0, 0.5),
      0 0 100px rgba(0, 255, 255, 0.2),
      inset 0 0 30px rgba(0, 255, 255, 0.05);
  }
  
  .cta-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--accent-secondary) 0%, var(--accent-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .cta-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }
  
  .cta-button {
    background: linear-gradient(135deg, #00ffff 0%, #00cccc 100%);
    color: #0a1a1a;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
    box-shadow: 
      0 0 30px rgba(0, 255, 255, 0.4),
      0 4px 15px rgba(0, 0, 0, 0.2);
  }
  
  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 
      0 0 40px rgba(0, 255, 255, 0.6),
      0 8px 20px rgba(0, 0, 0, 0.3);
    background: linear-gradient(135deg, #00e6e6 0%, #00b3b3 100%);
  }
  
  .btn-arrow {
    transition: transform 0.3s ease;
  }
  
  .cta-button:hover .btn-arrow {
    transform: translateX(5px);
  }
  
  .phone-icon {
    font-size: 1.2rem;
  }
  
  .trust-indicators {
    display: flex;
    gap: 30px;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .trust-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text-secondary);
    font-size: 0.95rem;
  }
  
  .trust-icon {
    color: var(--accent-primary);
    font-weight: bold;
    font-size: 1.2rem;
  }
  
  /* Mobile Styles */
  @media (max-width: 768px) {
    .cta-section-dark {
      padding: 60px 0;
    }
    
    .cta-content {
      padding: 2rem;
    }
    
    .cta-title {
      font-size: 2rem;
    }
    
    .cta-subtitle {
      font-size: 1.1rem;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-button,
    .btn-secondary {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
    
    .trust-indicators {
      flex-direction: column;
      gap: 15px;
    }
  }
  
  /* Animation */
  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 
        0 0 30px rgba(0, 255, 255, 0.4),
        0 4px 15px rgba(0, 0, 0, 0.2);
    }
    50% {
      box-shadow: 
        0 0 50px rgba(0, 255, 255, 0.6),
        0 4px 15px rgba(0, 0, 0, 0.2);
    }
  }
  
  .cta-button {
    animation: pulse-glow 3s ease-in-out infinite;
  }
</style>