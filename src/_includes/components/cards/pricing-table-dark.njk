{# Dark Themed Pricing Table Component #}
{# 
  Usage: {% include "components/cards/pricing-table-dark.njk" %}
  
  Variables:
  - pricingOptions: Array of pricing options
    - type: Package name
    - price: Price range
    - features: Array of features
    - highlighted: Boolean for recommended option
#}

<div class="pricing-table-container">
  <div class="pricing-grid">
    {% for option in pricingOptions %}
    <div class="pricing-card glass-panel {% if option.highlighted %}highlighted{% endif %}">
      {% if option.highlighted %}
      <div class="recommended-badge">RECOMMENDED</div>
      {% endif %}
      
      <h3 class="pricing-title">{{ option.type }}</h3>
      <div class="pricing-amount">{{ option.price }}</div>
      
      <ul class="pricing-features">
        {% for feature in option.features %}
        <li>
          <span class="feature-icon">âœ“</span>
          {{ feature }}
        </li>
        {% endfor %}
      </ul>
      
      <a href="/contact/" class="btn {% if option.highlighted %}cta-button{% else %}btn-primary{% endif %}">
        Get Started
      </a>
    </div>
    {% endfor %}
  </div>
</div>

<style>
  .pricing-table-container {
    margin: 40px 0;
  }
  
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    align-items: stretch;
  }
  
  .pricing-card {
    background: rgba(0, 255, 255, 0.03);
    backdrop-filter: blur(30px) saturate(200%);
    border: 1px solid rgba(0, 255, 255, 0.2);
    border-radius: 15px;
    padding: 2.5rem;
    position: relative;
    text-align: center;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  
  .pricing-card:hover {
    transform: translateY(-5px);
    border-color: var(--accent-primary);
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.8),
      0 0 40px rgba(0, 255, 255, 0.3);
  }
  
  .pricing-card.highlighted {
    border-color: var(--accent-primary);
    border-width: 2px;
    box-shadow: 
      0 0 40px rgba(0, 255, 255, 0.4),
      inset 0 0 20px rgba(0, 255, 255, 0.1);
  }
  
  .recommended-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--accent-primary);
    color: var(--primary-dark);
    padding: 5px 20px;
    border-radius: 20px;
    font-weight: bold;
    font-size: 0.8rem;
    letter-spacing: 0.05em;
  }
  
  .pricing-title {
    color: var(--accent-primary);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .pricing-amount {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 2rem;
    background: linear-gradient(135deg, var(--accent-secondary) 0%, var(--accent-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .pricing-features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
    text-align: left;
    flex-grow: 1;
  }
  
  .pricing-features li {
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(0, 255, 255, 0.1);
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  .pricing-features li:last-child {
    border-bottom: none;
  }
  
  .feature-icon {
    color: var(--accent-primary);
    font-weight: bold;
    font-size: 1.2rem;
  }
  
  .pricing-card .btn,
  .pricing-card .cta-button {
    width: 100%;
    margin-top: auto;
  }
  
  @media (max-width: 768px) {
    .pricing-grid {
      grid-template-columns: 1fr;
    }
    
    .pricing-card {
      padding: 2rem;
    }
  }
</style>