{# Service Hero Section - Standardized to Match Homepage #}
{# Default values - can be overridden when including #}
{% set heroTitle = title or "Professional Insulation Services" %}
{% set heroSubtitle = subtitle or "Expert Installation by Arizona's Trusted Contractors" %}
{% set ctaPrimary = ctaPrimary or "FREE ESTIMATE" %}
{% set ctaPrimaryLink = ctaPrimaryLink or "/contact/" %}

<section class="hero hero-image" style="background-image: url('/images-optimized/insulation_contractors_of_arizona_spray_foam_Arizona_Sunset-1920w.webp');">
    {# NO OVERLAY - Clean hero just like homepage #}
    <div class="container">
        <div class="hero-content-wrapper">
            <div class="service-area-badge">
                <span class="badge-icon">üìç</span> Serving Phoenix Metro Area
            </div>
            <h1 class="hero-title" data-text="{{ heroTitle }}">{{ heroTitle }}</h1>
            <p class="hero-subtitle">{{ heroSubtitle }}</p>
            
            <div class="hero-description">
                <p>Serving the Valley Since 2004 ‚Ä¢ Licensed, Bonded & Insured</p>
            </div>
            
            <div class="trust-badges">
                <div class="badge-item">
                    <img src="/images-optimized/BBB-100w.webp" 
                         srcset="/images-optimized/BBB-100w.webp 100w,
                                 /images-optimized/BBB-150w.webp 150w,
                                 /images-optimized/BBB-200w.webp 200w"
                         sizes="(max-width: 768px) 60px, 80px"
                         alt="BBB A+ Rating" 
                         class="badge-img"
                         width="80"
                         height="31"
                         loading="eager">
                    <span>A+ Rating</span>
                </div>
                <div class="badge-item">
                    <img src="/images-optimized/SPFA-100w.webp"
                         srcset="/images-optimized/SPFA-100w.webp 100w,
                                 /images-optimized/SPFA-150w.webp 150w,
                                 /images-optimized/SPFA-200w.webp 200w"
                         sizes="(max-width: 768px) 60px, 80px"
                         alt="SPFA Certified" 
                         class="badge-img"
                         width="80"
                         height="80"
                         loading="eager">
                    <span>Certified</span>
                </div>
                <div class="badge-item">
                    <span>‚úì Licensed ROC# 340641</span>
                </div>
            </div>
            
            <div class="hero-stats">
                <div class="stat">
                    <span class="stat-number">‚≠ê 4.8/5 Stars</span>
                </div>
            </div>
            
            <div class="hero-cta-group">
                <a href="{{ ctaPrimaryLink }}" class="btn-hero-primary">
                    {{ ctaPrimary }} <span class="btn-arrow">‚Üí</span>
                </a>
            </div>

            {# Optional service-specific stats if provided #}
            {% if heroStats %}
            <div class="service-stats">
                {% for stat in heroStats %}
                <div class="service-stat">
                    <span class="stat-value">{{ stat.value }}</span>
                    <span class="stat-desc">{{ stat.label }}</span>
                </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
</section>

<style>
/* Additional styles for service-specific stats if needed */
.service-stats {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
    flex-wrap: wrap;
}

.service-stat {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 1rem 1.5rem;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    text-align: center;
    min-width: 120px;
}

.service-stat .stat-value {
    display: block;
    font-size: 1.8rem;
    font-weight: bold;
    color: var(--glow-primary);
    margin-bottom: 0.25rem;
}

.service-stat .stat-desc {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.9;
}

@media (max-width: 768px) {
    .service-stats {
        gap: 1rem;
        margin-top: 1.5rem;
    }
    
    .service-stat {
        padding: 0.75rem 1rem;
        min-width: 100px;
    }
    
    .service-stat .stat-value {
        font-size: 1.5rem;
    }
    
    .service-stat .stat-desc {
        font-size: 0.75rem;
    }
}
</style>