{# CTA Section Component #}
{# Default values - can be overridden when including #}
{% set ctaTitle = ctaTitle or "Ready to Transform Your Home's Comfort?" %}
{% set ctaText = ctaText or "Don't suffer through another scorching Arizona summer. Get your free insulation assessment today!" %}
{% set highlightTitle = highlightTitle or "Limited Time Offer" %}
{% set highlightText = highlightText or "Schedule your free assessment this month and receive priority scheduling for your installation!" %}
{% set showHighlight = showHighlight if showHighlight is defined else true %}
{% set ctaPrimary = ctaPrimary or "Get Free Quote" %}
{% set ctaSecondary = ctaSecondary or "Call " + site.phone + " Now" %}
{% set ctaPrimaryLink = ctaPrimaryLink or "/contact/" %}
{% set ctaSecondaryLink = ctaSecondaryLink or "tel:" + site.phone %}
{% set showFooterInfo = showFooterInfo if showFooterInfo is defined else true %}

<section class="cta-section">
    <div class="container">
        <h2 class="cta-title">{{ ctaTitle }}</h2>
        <p class="cta-subtitle">{{ ctaText }}</p>
        
        {% if showHighlight %}
        <div class="highlight-box">
            <h3 class="highlight-title">{{ highlightTitle }}</h3>
            <p class="highlight-text">{{ highlightText }}</p>
        </div>
        {% endif %}
        
        <div class="cta-buttons">
            <a href="{{ ctaPrimaryLink }}" class="btn-cta-primary">{{ ctaPrimary }}</a>
            <a href="{{ ctaSecondaryLink }}" class="btn-cta-secondary">{{ ctaSecondary }}</a>
        </div>
        
        {% if showFooterInfo %}
        <div class="footer-info">
            <p class="service-areas"><strong>Service Areas:</strong> {{ site.service_areas | join(" • ") }}</p>
            <p class="credentials"><em>Licensed • Bonded • Insured • BBB A+ Rating • 20+ Years Experience</em></p>
        </div>
        {% endif %}
    </div>
</section>

<style>
/* CTA Section Styling */
.cta-section {
    background: linear-gradient(135deg, #0a1a1a 0%, #1a2a2a 100%);
    color: white;
    padding: 80px 0;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 50%, rgba(0, 255, 255, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 50%, rgba(0, 255, 255, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

.cta-section .container {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #00ffff;
    text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
}

.cta-subtitle {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.highlight-box {
    background: rgba(0, 255, 255, 0.1);
    border: 2px solid rgba(0, 255, 255, 0.3);
    border-radius: 15px;
    padding: 2rem;
    margin: 2rem auto;
    max-width: 800px;
    backdrop-filter: blur(10px);
}

.highlight-title {
    font-size: 1.8rem;
    color: #00ffff;
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 1rem;
    font-weight: 700;
}

.highlight-text {
    font-size: 1.1rem;
    margin: 0;
}

.cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
    margin: 3rem 0;
    flex-wrap: wrap;
}

.btn-cta-primary,
.btn-cta-secondary {
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.3s ease;
    display: inline-block;
    min-width: 200px;
    text-align: center;
}

.btn-cta-primary {
    background: #00ffff;
    color: #0a1a1a;
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.5);
}

.btn-cta-primary:hover {
    background: #00e6e6;
    transform: translateY(-3px);
    box-shadow: 0 0 40px rgba(0, 255, 255, 0.7);
}

.btn-cta-secondary {
    background: transparent;
    color: #00ffff;
    border: 2px solid #00ffff;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
}

.btn-cta-secondary:hover {
    background: rgba(0, 255, 255, 0.1);
    transform: translateY(-3px);
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.5);
}

.footer-info {
    margin-top: 3rem;
    opacity: 0.8;
}

.service-areas {
    font-size: 1rem;
    margin-bottom: 0.5rem;
}

.credentials {
    font-size: 0.9rem;
    color: #00ffff;
    opacity: 0.8;
}

/* Mobile Responsive */
@media (max-width: 768px) {
    .cta-section {
        padding: 60px 0;
    }
    
    .cta-title {
        font-size: 2rem;
        letter-spacing: 1px;
    }
    
    .cta-subtitle {
        font-size: 1.1rem;
        padding: 0 10px;
    }
    
    .highlight-box {
        padding: 1.5rem;
        margin: 1.5rem 10px;
    }
    
    .highlight-title {
        font-size: 1.4rem;
        letter-spacing: 2px;
    }
    
    .highlight-text {
        font-size: 1rem;
    }
    
    .cta-buttons {
        flex-direction: column;
        gap: 1rem;
        margin: 2rem 0;
    }
    
    .btn-cta-primary,
    .btn-cta-secondary {
        width: 90%;
        max-width: 300px;
        padding: 0.9rem 1.5rem;
        font-size: 1rem;
        min-width: unset;
    }
    
    .service-areas {
        font-size: 0.9rem;
        padding: 0 10px;
    }
}

@media (max-width: 480px) {
    .cta-title {
        font-size: 1.7rem;
    }
    
    .cta-subtitle {
        font-size: 1rem;
    }
    
    .highlight-title {
        font-size: 1.2rem;
    }
    
    .btn-cta-primary,
    .btn-cta-secondary {
        padding: 0.8rem 1.2rem;
        font-size: 0.95rem;
    }
    
    .credentials {
        font-size: 0.8rem;
    }
}
</style>