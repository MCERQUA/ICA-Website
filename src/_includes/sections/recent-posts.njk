{# Recent Posts Component #}
{# Default values - can be overridden when including #}
{% set sectionTitle = sectionTitle or "Insulation Resources & Expert Advice" %}
{% set sectionIntro = sectionIntro or "Stay informed with our latest insights and tips" %}
{% set postCount = postCount or 3 %}
{% set showViewAllButton = showViewAllButton if showViewAllButton is defined else true %}

<section class="recent-posts content-section">
    <div class="container">
        <div class="section-header">
            <h2>{{ sectionTitle }}</h2>
            <p class="section-intro">{{ sectionIntro }}</p>
        </div>
        
        <div class="blog-grid">
            {% for post in collections.blog | limit(postCount) %}
            <article class="blog-card">
                <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                <time datetime="{{ post.date | htmlDateString }}">{{ post.date | postDate }}</time>
                <p>{{ post.data.excerpt }}</p>
                <a href="{{ post.url }}" class="btn btn-secondary">Read Article â†’</a>
            </article>
            {% endfor %}
        </div>
        
        {% if showViewAllButton %}
        <div class="text-center mt-4">
            <a href="/blog/" class="btn btn-primary">View All Resources</a>
        </div>
        {% endif %}
    </div>
</section>

<style>
/* Blog cards mobile fix - Prevent button clipping and ensure proper spacing */
/* CRITICAL: High specificity mobile button fixes for clipping issues */
@media (max-width: 768px) {
    .recent-posts .blog-grid {
        padding: 0 0.5rem !important;
        gap: 1.5rem !important;
    }
    
    .recent-posts .blog-card {
        padding: 1.5rem !important;
        margin: 0 0.25rem !important;
    }
    
    /* CRITICAL: Force button styles with !important to override all other CSS */
    .recent-posts .blog-card .btn,
    .recent-posts .blog-card .btn-secondary {
        font-size: 0.75rem !important;
        padding: 0.5rem 0.8rem !important;
        line-height: 1.2 !important;
        white-space: nowrap !important;
        text-align: center !important;
        margin: 1rem 0 0 0 !important;
        width: auto !important;
        max-width: 90% !important;
        box-sizing: border-box !important;
        overflow: hidden !important;
        text-overflow: ellipsis !important;
        display: inline-block !important;
    }
}

/* Extra small devices - even more conservative spacing */
@media (max-width: 480px) {
    .recent-posts .blog-card {
        padding: 1.25rem !important;
        margin: 0 !important;
    }
    
    .recent-posts .blog-card .btn,
    .recent-posts .blog-card .btn-secondary {
        font-size: 0.7rem !important;
        padding: 0.4rem 0.6rem !important;
        margin: 0.75rem 0 0 0 !important;
        max-width: 85% !important;
    }
    
    .recent-posts .blog-grid {
        padding: 0 0.25rem !important;
    }
}

/* Fix for main "View All Resources" button */
@media (max-width: 768px) {
    .recent-posts .text-center .btn-primary {
        font-size: 0.8rem !important;
        padding: 0.6rem 1rem !important;
        white-space: nowrap !important;
        max-width: 85% !important;
        margin: 0 auto !important;
        display: inline-block !important;
    }
}

@media (max-width: 480px) {
    .recent-posts .text-center .btn-primary {
        font-size: 0.75rem !important;
        padding: 0.5rem 0.8rem !important;
        max-width: 80% !important;
    }
}

/* Ensure blog card titles don't get too long */
.recent-posts .blog-card h3 a {
    display: block;
    line-height: 1.3;
    word-wrap: break-word;
    hyphens: auto;
}

.recent-posts .blog-card p {
    line-height: 1.4;
    margin-bottom: 1rem;
}

/* Extra safety: Ensure no button extends beyond container */
.recent-posts .blog-card {
    overflow-x: hidden;
}
</style>