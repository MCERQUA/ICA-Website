{%- set showAccreditations = accreditationsSection.showSection if accreditationsSection.showSection is defined else true -%}
{%- set sectionTitle = accreditationsSection.sectionTitle if accreditationsSection.sectionTitle else "Trusted by Industry Leaders" -%}
{%- set animationSpeed = accreditationsSection.animationSpeed if accreditationsSection.animationSpeed else "30s" -%}

{%- if showAccreditations -%}
<section class="accreditations-banner">
  <div class="container">
    <h2 class="section-title">{{ sectionTitle }}</h2>
    <div class="accreditations-wrapper">
      <div class="accreditations-track">
        <!-- First set of logos -->
        <div class="accreditation-logo">
          <img src="/images/2025_sfww_ambassador_badge.webp" alt="2025 SFWW Ambassador Badge" loading="lazy">
        </div>
        <div class="accreditation-logo">
          <img src="/images/icaa-Logo.webp" alt="ICAA Logo - Insulation Contractors Association of America" loading="lazy">
        </div>
        <div class="accreditation-logo">
          <img src="/images/SPFA.webp" alt="SPFA - Spray Polyurethane Foam Alliance" loading="lazy">
        </div>
        <div class="accreditation-logo">
          <img src="/images/rocseal.webp" alt="ROC Seal - Registrar of Contractors" loading="lazy">
        </div>
        <!-- Duplicate set for seamless loop -->
        <div class="accreditation-logo">
          <img src="/images/2025_sfww_ambassador_badge.webp" alt="2025 SFWW Ambassador Badge" loading="lazy">
        </div>
        <div class="accreditation-logo">
          <img src="/images/icaa-Logo.webp" alt="ICAA Logo - Insulation Contractors Association of America" loading="lazy">
        </div>
        <div class="accreditation-logo">
          <img src="/images/SPFA.webp" alt="SPFA - Spray Polyurethane Foam Alliance" loading="lazy">
        </div>
        <div class="accreditation-logo">
          <img src="/images/rocseal.webp" alt="ROC Seal - Registrar of Contractors" loading="lazy">
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .accreditations-banner {
    padding: 60px 0;
    background: transparent;
    position: relative;
    overflow: hidden;
  }

  .accreditations-banner .section-title {
    text-align: center;
    margin-bottom: 40px;
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .accreditations-wrapper {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    overflow: hidden;
    padding: 20px 0;
  }

  /* Add gradient fade effect on edges */
  .accreditations-wrapper::before,
  .accreditations-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100px;
    z-index: 2;
    pointer-events: none;
  }

  .accreditations-wrapper::before {
    left: 0;
    background: linear-gradient(to right, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 100%);
  }

  .accreditations-wrapper::after {
    right: 0;
    background: linear-gradient(to left, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 100%);
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .accreditations-wrapper::before {
      background: linear-gradient(to right, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 100%);
    }
    .accreditations-wrapper::after {
      background: linear-gradient(to left, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 100%);
    }
  }

  .accreditations-track {
    display: flex;
    align-items: center;
    gap: 60px;
    animation: scroll-logos {{ animationSpeed }} linear infinite;
  }

  @keyframes scroll-logos {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .accreditation-logo {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100px;
    min-width: 150px;
    padding: 10px;
    background: transparent;
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .accreditation-logo:hover {
    transform: scale(1.15);
  }

  .accreditation-logo img {
    max-height: 80px;
    max-width: 130px;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: drop-shadow(0 0 10px rgba(0, 255, 255, 0.5));
    transition: all 0.3s ease;
  }

  .accreditation-logo:hover img {
    filter: drop-shadow(0 0 20px rgba(0, 255, 255, 0.8)) drop-shadow(0 0 30px rgba(0, 255, 255, 0.6));
    transform: scale(1.05);
  }

  /* Pause animation on hover */
  .accreditations-wrapper:hover .accreditations-track {
    animation-play-state: paused;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .accreditations-banner {
      padding: 40px 0;
    }

    .accreditations-banner .section-title {
      font-size: 2rem;
      margin-bottom: 30px;
    }

    .accreditations-track {
      gap: 40px;
      animation-duration: 20s;
    }

    .accreditation-logo {
      height: 80px;
      min-width: 120px;
    }

    .accreditation-logo img {
      max-height: 60px;
      max-width: 100px;
      filter: drop-shadow(0 0 8px rgba(0, 255, 255, 0.5));
    }

    .accreditation-logo:hover img {
      filter: drop-shadow(0 0 15px rgba(0, 255, 255, 0.8));
    }

    .accreditations-wrapper::before,
    .accreditations-wrapper::after {
      width: 50px;
    }
  }

  @media (max-width: 480px) {
    .accreditations-track {
      gap: 30px;
    }

    .accreditation-logo {
      height: 70px;
      min-width: 100px;
      padding: 8px;
    }

    .accreditation-logo img {
      max-height: 50px;
      max-width: 80px;
    }
  }
</style>
{%- endif -%}
