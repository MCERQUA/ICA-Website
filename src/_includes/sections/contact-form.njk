{# Contact Form Component #}
{# Variables with defaults #}
{% set showContactForm = showContactForm or true %}
{% set formTitle = formTitle or "Get Your Free Insulation Estimate" %}
{% set formSubtitle = formSubtitle or "Fill out the form below and we'll contact you within 24 hours" %}

{% if showContactForm %}
<section class="contact-form-section">
    <div class="container">
        <div class="contact-form-content">
            <div class="section-header">
                <h2>{{ formTitle }}</h2>
                <p>{{ formSubtitle }}</p>
            </div>
            
            <form name="homepage-contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="contact-form">
                <input type="hidden" name="form-name" value="homepage-contact">
                <p class="hidden">
                    <label>Don't fill this out if you're human: <input name="bot-field" /></label>
                </p>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label for="name">Name <span class="required">*</span></label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email <span class="required">*</span></label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="phone">Phone <span class="required">*</span></label>
                        <input type="tel" id="phone" name="phone" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="service">Service Needed</label>
                        <select id="service" name="service">
                            <option value="">Select a Service</option>
                            <option value="spray-foam">Spray Foam Insulation</option>
                            <option value="attic">Attic Insulation</option>
                            <option value="fiberglass">Fiberglass Insulation</option>
                            <option value="blown-in">Blown-In Insulation</option>
                            <option value="removal">Insulation Removal</option>
                            <option value="air-duct">Air Duct Cleaning</option>
                            <option value="commercial">Commercial Insulation</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group full-width">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="4" placeholder="Tell us about your project..."></textarea>
                </div>
                
                <div class="form-submit">
                    <button type="submit" class="btn btn-primary">
                        <span>Get Free Estimate</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<style>
.contact-form-section {
    position: relative;
    padding: 4rem 0;
    background: linear-gradient(135deg, rgba(30, 30, 30, 0.95) 0%, rgba(40, 40, 40, 0.95) 100%);
    overflow: hidden;
}

/* Add grid and particles background effect - FIXED: Added pointer-events: none */
.contact-form-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    z-index: 1;
    pointer-events: none; /* CRITICAL FIX - Allows clicks to pass through */
}

/* Animated particles - FIXED: Added pointer-events: none */
.contact-form-section::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-image: 
        radial-gradient(2px 2px at 20% 30%, rgba(0, 255, 255, 0.3), transparent),
        radial-gradient(2px 2px at 60% 70%, rgba(255, 107, 107, 0.2), transparent),
        radial-gradient(1px 1px at 90% 10%, rgba(0, 255, 255, 0.4), transparent);
    background-size: 200% 200%;
    animation: particleFloat 20s ease-in-out infinite;
    z-index: 1;
    pointer-events: none; /* CRITICAL FIX - Allows clicks to pass through */
}

@keyframes particleFloat {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(-5%, 5%); }
    50% { transform: translate(5%, -5%); }
    75% { transform: translate(-5%, -5%); }
}

.contact-form-content {
    position: relative;
    z-index: 10; /* INCREASED z-index for better layering */
    background: rgba(20, 20, 20, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(0, 255, 255, 0.2);
    border-radius: 10px;
    padding: 3rem;
    max-width: 800px;
    margin: 0 auto;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
}

.contact-form-section .section-header {
    text-align: center;
    margin-bottom: 2rem;
}

.contact-form-section h2 {
    color: #00ffff;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
}

.contact-form-section p {
    color: #ffffff;
    font-size: 1.1rem;
    opacity: 0.9;
}

.contact-form {
    margin-top: 2rem;
    position: relative;
    z-index: 11; /* Ensure form is above everything */
}

.form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.form-group {
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 12; /* Ensure form elements are interactive */
}

.form-group.full-width {
    grid-column: 1 / -1;
}

.form-group label {
    color: #00ffff;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.form-group .required {
    color: #ff6b6b;
}

.form-group input,
.form-group select,
.form-group textarea {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(0, 255, 255, 0.3);
    border-radius: 5px;
    padding: 0.75rem 1rem;
    color: #ffffff;
    font-size: 1rem;
    transition: all 0.3s ease;
    position: relative;
    z-index: 13; /* Ensure inputs are clickable */
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
    outline: none;
    border-color: #00ffff;
    background: rgba(255, 255, 255, 0.1);
    box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
}

.form-group input::placeholder,
.form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.form-submit {
    text-align: center;
    margin-top: 2rem;
    position: relative;
    z-index: 12;
}

.form-submit .btn-primary {
    background: linear-gradient(135deg, #00ffff 0%, #0099cc 100%);
    color: #000;
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    box-shadow: 0 5px 20px rgba(0, 255, 255, 0.3);
    position: relative;
    z-index: 13; /* Ensure button is clickable */
}

.form-submit .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 255, 255, 0.5);
}

.form-submit .btn-primary:active {
    transform: translateY(0);
}

.hidden {
    display: none !important;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
    .contact-form-content {
        padding: 2rem 1.5rem;
    }
    
    .contact-form-section h2 {
        font-size: 2rem;
    }
    
    .form-grid {
        grid-template-columns: 1fr;
    }
    
    .form-submit .btn-primary {
        width: 100%;
        justify-content: center;
    }
}
</style>
{% endif %}
