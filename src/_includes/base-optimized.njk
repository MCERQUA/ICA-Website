      "telephone": "{{ site.phone }}",
      "email": "{{ site.email }}",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "10616 N 50th Ave",
        "addressLocality": "Glendale",
        "addressRegion": "AZ",
        "postalCode": "85304",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 33.5387,
        "longitude": -112.1859
      },
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": [
          "Monday",
