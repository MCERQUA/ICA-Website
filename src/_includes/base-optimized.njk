    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "{{ site.name }}",
      "image": "/images-optimized/Insulation_Contractors_of_arizona_logo-original.webp",
      "@id": "https://insulationcontractorsofarizona.com",
